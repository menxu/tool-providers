.row
  .small-12.columns
    nav.top-bar#tool-proviers-topbar data-topbar=""
      ul.title-area
        li.toggle-topbar.menu-icon
          a
            span
        li.name
          h1
            a.title href="#{root_path}"
              .logo-wrapper
                .logo-wrapper-inner
                  svg height="60" width="90"
                    text x="10" y="25" fill="#4D8AB3" transform="rotate(-20 80,60)" MenDD
                    text x="40" y="50" fill="#4D8AB3" transform="rotate(0 0,0)" 工具
                  - if bit_enable?
                    span.bit
                      = image_tag 'logos/neice.png'
                  - else
                    span.bit
                      = image_tag 'logos/beta.png'
      section.top-bar-section
        ul.left
          = render partial: 'layouts/menu'
      section.top-bar-section.right-top-bar-section
        - if current_user
          ul.right.login
            li
              = render 'layouts/messagebox'
            li
              = render 'layouts/user'
        - else
          ul.right.nologin
            li
              = link_to t('menu.login'), new_user_session_path
            li.separation
              a
                | |
            li
              = link_to t('menu.register'), new_user_registration_path
    = render 'layouts/user_dropdown' if current_user
hr.topbar-hr
